<% if @subscription.paused? %>
  <%= link_to Spree.t(:activate), "javascript:void(0)", class: "btn ajax_handler #{ btn_class } btn-success", data: { url: unpause_subscription_path(@subscription, authenticity_token: form_authenticity_token), method: "PATCH", confirmation: Spree.t("subscriptions.confirm.activate") } %>
<% else %>
  <%= link_to Spree.t(:pause), "javascript:void(0)", class: "btn #{ btn_class } ajax_handler btn-warning", data: { url: pause_subscription_path(@subscription, authenticity_token: form_authenticity_token), method: "PATCH", confirmation: Spree.t("subscriptions.confirm.pause") } %>
<% end %>
